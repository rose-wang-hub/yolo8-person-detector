<launch>
  <!-- 跟随控制：默认直接订阅视觉状态 /person_track/vision_state -->
  <node pkg="kuavo_person_follow"
        type="follow_controller_node.py"
        name="follow_controller"
        output="screen">
    <param name="state_topic" value="/person_track/vision_state" />
    <param name="dist_target" value="1.5" />
    <param name="v_max" value="0.6" />
    <param name="yaw_rate_max" value="0.8" />
  </node>

  <!-- 上下位机桥接：把 /cmd_vel 通过 UDP 发给 Kuavo 下位机 -->
  <node pkg="kuavo_person_follow"
        type="kuavo_lowlevel_bridge_node.py"
        name="kuavo_bridge"
        output="screen">
    <param name="kuavo_ip" value="192.168.1.100" />
    <param name="kuavo_port" value="9000" />
  </node>
</launch>
